---
import { textFieldInputClass } from "./TextField.recipes";
import type { ComponentVariantAttributes } from "@components/utils/twCva";

type Props = ComponentVariantAttributes<"textarea", typeof textFieldInputClass>;

const { class: className, color, size, variant, width, ...props } = Astro.props;
---

<textarea
  class={textFieldInputClass({
    className,
    color,
    size,
    variant,
    width,
  })}
  {...props}
>
  <slot />
</textarea>
