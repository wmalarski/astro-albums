---
export interface Props {
  covers?: string[] | undefined;
  title: string;
}

const { covers, title } = Astro.props;

const showCover = (covers || []).length > 0;
---

{
  showCover && (
    <div class="carousel rounded-box">
      {covers?.map((cover) => (
        <div class="carousel-item">
          <img src={cover} alt={title} />
        </div>
      ))}
    </div>
  )
}
