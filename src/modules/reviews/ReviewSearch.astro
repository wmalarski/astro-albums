---
import { Button } from "@components/Button/Button";
import { Card } from "@components/Card/Card";
import { Label, LabelText } from "@components/Label/Label";
import { TextFieldInput, TextFieldRoot } from "@components/TextField/TextField";

export type Props = {
  lower?: number;
  query?: string;
  upper?: number;
  order?: "rate" | "createdAt";
};

const { lower, order, query, upper } = Astro.props;
---

<Card bg="base-300" size="compact">
  <div class="card-body flex gap-2">
    <form class="w-full flex flex-row gap-2">
      <div class="flex flex-col gap-2 w-full">
        <TextFieldRoot class="flex-row gap-2 items-center">
          <Label for="query">
            <LabelText>Search</LabelText>
          </Label>
          <TextFieldInput
            id="query"
            name="query"
            placeholder="Search"
            class="w-full"
            type="text"
            value={query ?? ""}
          />
        </TextFieldRoot>
        <TextFieldRoot class="flex-row gap-2 items-center">
          <Label for="lower">
            <LabelText>Lower rate</LabelText>
          </Label>
          <TextFieldInput
            id="lower"
            max={10}
            min={0}
            placeholder="Lower"
            step={0.1}
            type="number"
            class="w-full"
            value={lower ?? 0}
          />
        </TextFieldRoot>
        <TextFieldRoot class="flex-row gap-2 items-center">
          <Label for="upper">
            <LabelText>Upper rate</LabelText>
          </Label>
          <TextFieldInput
            id="upper"
            max={10}
            min={0}
            placeholder="Upper"
            step={0.1}
            class="w-full"
            type="number"
            value={upper ?? 0}
          />
        </TextFieldRoot>
        <TextFieldRoot class="flex-row gap-2 items-center">
          <Label for="order">
            <LabelText>Order by</LabelText>
          </Label>
          <select class="select" id="order" value={order ?? "createdAt"}>
            <option value="rate">Rate</option>
            <option value="createdAt">Created At</option>
          </select>
        </TextFieldRoot>
      </div>
      <Button color="primary" type="submit">Search</Button>
    </form>
  </div>
</Card>
